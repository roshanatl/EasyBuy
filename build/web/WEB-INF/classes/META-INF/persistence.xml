<?xml version="1.0" encoding="UTF-8"?>
<persistence
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
    <persistence-unit name="Demo">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>model.admin.Item</class>
        <class>model.account.Account</class>
        <class>model.account.Address</class>
        <class>model.account.Money</class>
        <class>model.account.Orders</class> 
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/sample"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <!--<property name="javax.persistence." value="org.hibernate.dialect.DerbyDialect" />-->
            <property name="javax.persistence.jdbc.user" value="app" />
            <property name="javax.persistence.jdbc.password" value="app" />
            <property name="eclipselink.ddl-generation" value="create-tables" />
        </properties>
    </persistence-unit> 
</persistence>